<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lenovo.diceroller.Game"
    tools:showIn="@layout/activity_game"
    >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt"
        android:inputType="number"
        android:typeface="serif"
        android:textStyle="bold"
        android:textColor="#b43dbb"
        android:singleLine="true"
        android:selectAllOnFocus="false"
        android:foreground="#fffffe"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="64dp"
        android:layout_alignParentStart="true"
        android:background="#fffdfd"
        android:textAlignment="center"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:onClick="check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:id="@+id/btnClick"

        android:clickable="false"
        android:textStyle="bold|italic"
        android:textColor="#c11390"
        android:background="@drawable/cheak"
        android:textSize="20dp"
        android:layout_below="@+id/txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Set the Number"
        android:padding="5dp"
        android:shadowColor="#da52ba"
        android:id="@+id/textView2"
        android:textColor="#93227a"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="textEnd"
        android:textStyle="bold|italic"
        android:typeface="serif" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restartbtn"
        android:onClick="restart"
        android:text="Restart"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic"
        android:textColorLink="#c263b9"
        android:textColor="#c235ad" />

</RelativeLayout>
